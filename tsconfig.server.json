{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "outDir": "dist-server",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "rootDir": "src-server",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src-server"]
}
